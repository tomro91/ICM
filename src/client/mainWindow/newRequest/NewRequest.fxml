<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:id="dialogPane" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="client.mainWindow.newRequest.NewRequest">
   <content>
      <AnchorPane layoutX="14.0" style="-fx-background-color: white;">
         <children>
            <Label contentDisplay="RIGHT" layoutX="124.0" layoutY="35.0" prefHeight="36.0" prefWidth="339.0"
                   text="Add New Change Request">
               <font>
                  <Font name="System Bold" size="25.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#2d7bdb" glyphName="PLUS" size="25"/>
               </graphic>
            </Label>
            <Label layoutX="56.0" layoutY="102.0" text="Info System:">
               <font>
                  <Font size="18.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#e02e2e" glyphName="ASTERISK"/>
               </graphic>
            </Label>
            <ChoiceBox fx:id="infoSystemChoiceBox" layoutX="236.0" layoutY="103.0" prefHeight="31.0" prefWidth="241.0"
                       style="-fx-background-radius: 10;"/>
            <Label layoutX="58.0" layoutY="159.0" text="Current State:">
               <font>
                  <Font size="18.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#e02e2e" glyphName="ASTERISK" text=""/>
               </graphic>
            </Label>
            <TextArea fx:id="currentStateTextArea" layoutX="236.0" layoutY="159.0" prefHeight="70.0" prefWidth="325.0"
                      promptText="Enter current state of the system" style="-fx-background-radius: 10;"
                      wrapText="true"/>
            <Label layoutX="56.0" layoutY="243.0" text="Requested Change:">
               <font>
                  <Font size="18.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#e02e2e" glyphName="ASTERISK"/>
               </graphic>
            </Label>
            <TextArea fx:id="requestedChangeTextArea" layoutX="236.0" layoutY="243.0" prefHeight="70.0"
                      prefWidth="325.0" promptText="Enter the requesed change for the system"
                      style="-fx-background-radius: 10;" wrapText="true"/>
            <Label layoutX="56.0" layoutY="333.0" text="Reason For Change:">
               <font>
                  <Font size="18.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView fill="#e02e2e" glyphName="ASTERISK"/>
               </graphic>
            </Label>
            <TextArea fx:id="reasonForChangeTextArea" layoutX="236.0" layoutY="333.0" prefHeight="70.0"
                      prefWidth="325.0" promptText="Enter the reason for the requested change"
                      style="-fx-background-radius: 10;" wrapText="true"/>
            <Label layoutX="52.0" layoutY="423.0" text="Comments:">
               <font>
                  <Font size="18.0"/>
               </font>
            </Label>
            <TextArea fx:id="commentsTextArea" layoutX="236.0" layoutY="423.0" prefHeight="70.0" prefWidth="325.0"
                      promptText="Enter your comments here" style="-fx-background-radius: 10;" wrapText="true"/>
            <Button fx:id="attachFileButton" contentDisplay="RIGHT" layoutX="49.0" layoutY="521.0"
                    mnemonicParsing="false" onAction="#addFiles" prefHeight="37.0" prefWidth="127.0"
                    text="Attach Files ">
               <font>
                  <Font size="16.0"/>
               </font>
               <graphic>
                  <FontAwesomeIconView glyphName="PAPERCLIP" size="20" text=""/>
               </graphic>
            </Button>
            <Button fx:id="submitNewChangeRequestButton" layoutX="480.0" layoutY="638.0" mnemonicParsing="false"
                    onAction="#submitNewChangeRequest" prefHeight="37.0" prefWidth="81.0"
                    style="-fx-background-color: #558ed0; -fx-border-color: black; -fx-background-radius: 10; -fx-border-radius: 10;"
                    text="Submit">
               <font>
                  <Font size="16.0"/>
               </font>
            </Button>
            <Button fx:id="cancelButton" layoutX="358.0" layoutY="639.0" mnemonicParsing="false" prefHeight="37.0"
                    prefWidth="81.0" style="-fx-background-radius: 10;" text="Cancel">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
            <ListView fx:id="filesListView" layoutX="236.0" layoutY="521.0" prefHeight="70.0" prefWidth="325.0"
                      style="-fx-background-radius: 10;"/>
         </children>
      </AnchorPane>
   </content>
</DialogPane>
